<html>
	<head>
		<title>Showing &quot;<%= h @article.title -%>&quot;</title>
	</head>
	<body>
		<p>
			<%= link_to 'Return to the main page', articles_path %> |
                	<%= link_to 'Edit', edit_article_path(@article) %> |
        	        <%= link_to 'Delete', @article, :method => :delete %>
                </p>

		<h1> <%= h @article.title -%> </h1>
		<p> <%= h @article.content -%> </p>
		<h2> Comments </h2>
		<p>		
			<%= link_to 'Add comment', new_article_comment_path(@article) %> 
		</p>
		
		<% @article.comments.each do |a| %>
			Written by <b> <%= h a.author %> </b> | 
			<%= link_to 'Remove comment', a, :method => :delete %>
			<br />
			<p> <%= h a.content %> </p>
		<% end %>		
	</body>
</html>
